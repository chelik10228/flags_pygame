#!/usr/bin/python3
import pygame;
import time;

surface = pygame.display.set_mode([340,200]);
pygame.display.flip();
def draw(c1,c2,c3,sx,sy,x,y):
    pygame.draw.rect(surface, (c1,c2,c3), (sx,sy,x,y));
surface.fill((255,255,255));
draw(0,0,0, 0,0, 128,1);
draw(0,0,0, 0,0, 1,48);
draw(0,0,0, 0,48, 129,1);
draw(0,0,0, 128,0, 1,48);
draw(0,0,0, 1,1, 127,16);
draw(255,0,0, 1,16, 127,16);
draw(255,255,0, 1,32, 127,16);
pygame.display.update();
while True:
    pass;
